<% include ../partials/header %>

    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="text-light">Add new showing:</h1>
                <form action="/movies/<%= movie._id %>/showing" method="post">
                    <div class="form-group">
                        <h3 class="checked">Chose cinema hall:</h3>
                        <div>
                            <input type="radio" class="form-group-input" id="blueHall" name="cinemaHallName" value="blue" checked>
                            <label class="form-check-label option" for="blueHall">Blue - 40ppl</label>
                            <!-- <input type="radio" class="form-group-input" id="greenHall" name="cinemaHallName" value="green">
                            <label class="form-check-label" for="greenHall">Green - 20ppl</label> -->
                        </div>
                    </div>
                    <div class="form-group">
                        <h3 class="checked">Chose time of screening:</h3>
                        <% var isEvening = true %>
                        <% var isMidday = true %>
                        <% var isMorning = true %>
                        <% for (var value of allShowings){ %>
                            <% if(value.showingHour === "21.00"){ %>
                                <% isEvening = false %>
                            <% }else if(value.showingHour === "19.00"){ %>
                                <% isMidday = false %>
                            <% }else if(value.showingHour === "17.00"){ %>
                                <% isMorning = false %>
                            <% } %>
                        <% } %>

                        <% if(isMorning){ %>
                            <div>
                                <input type="radio" class="form-group-input" id="midday" name="showingHour" value="17.00" checked>
                                <label class="form-check-label option" for="midday">midday</label>
                            </div>
                        <% } %>
                        <% if(isMidday){ %>
                            <div>
                                <input type="radio" class="form-group-input" id="evening" name="showingHour" value="19.00">
                                <label class="form-check-label option" for="evening">evening</label>
                            </div>
                        <% } %>
                        <% if(isEvening){ %>
                            <div>
                                <input type="radio" class="form-group-input" id="morning" name="showingHour" value="21.00">

                                <label class="form-check-label option" for="morning">morning</label>
                            </div>
                        <% } %>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit" class="btn btn-primary">Sumbit</button>    
                    </div>
                </form>
            <a href="/movies/<%= movie._id %>/showing">BACK</a>
        </div>
    </div>
    
<% include ../partials/footer %>