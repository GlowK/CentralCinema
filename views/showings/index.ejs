<% include ../partials/header %>

    <div class="row">

        <div class="col-md-3">
            <!-- <p class="lead">CentralCinema</p> -->
            <div class="list-group">
                <li class="list-group-item"><a href="/movies/<%=movie._id%>">Description</a></li>
                <li class="list-group-item"> <a href="/movies/<%=movie._id%>/reviews/">Reviews</a></li>
                <li class="list-group-item active">Showing</li>
                <li class="list-group-item"><a href="/movies/<%=movie._id%>/trailer>">Trailer</a></li>
                <% if(currentUser && currentUser.isAdmin) { %>
                <li class="list-group-item list-group-item-success"><a href="/movies/<%=movie._id%>/showing/new">Create Showing</a></li>
                <% } %>
            </div>
        </div>

        <div class="col-md-9">
                <% if( cinemaHall == null) { %>
                    <h5>
                        <em class="checked">No showings yet.</em>
                    </h5>
                <% } else { %>

                <div class="card mb-3">
                    <!-- <img class="card-img-top" src="<%= movie.image %>"> -->
                    <div class="card-body">
                        <h4 class="card-title"><a><%= movie.name %></a></h4>
                        <hr>
                        <h5 class="card-title"><a>Chose time of screening:</a></h5>
                        <% allShowings.forEach(function(showing){ %>
                            <p>
                                <a class="btn btn-success" href="/movies/<%= movie._id%>/showing/<%= showing._id %>"><%= showing.showingHour %></a>
                                <a class="btn btn-primary disabled" href="#">CinemaHall: <%= cinemaHall.name %> </a>
                            </p>
                        <%})%>
                    </div>
                </div>
                <% } %>
        </div>
        
    </div>
    
<% include ../partials/footer %>