<% include ../partials/header %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1 class="text-light">Edit your comment to: </h1>
            <h1 class="text-light"><%= movie.name %> </h1>
        </div>
        <div class="col-md-6">      
            <form action="/movies/<%= movie._id %>/comments/<%= comment._id %>/?_method=PUT " method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit" class="btn btn-primary">Sumbit</button>    
                </div>
            </form>
            <a href="/movies">BACK</a>
        </div>
    </div>

<% include ../partials/footer %>