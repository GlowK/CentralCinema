<% include ../partials/header %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1 class="text-light">Add new rewiew to: </h1>
            <h1 class="text-light"><%= movie.name %> </h1>
        </div>
        <div class="col-md-6">    
            <form action="/movies/<%= movie._id %>/reviews" method="post">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="review[text]" rows="10" placeholder="Write your review"></textarea>
                </div>
                <div class="form-group">
                    <label for="rating" class="checked">Leave a rating:</label>
                    <fieldset class="starability-basic form-group" id="rating">
                    <div>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5"/>
                        <label for="first-rate5" title="5 stars - Amazing">
                            <%- '<i class="fas fa-star checked"></i>'.repeat(5) %>
                        </label>
                    </div>
                    <div>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4"/>
                        <label for="first-rate4" title="4 stars - Very good">
                            <%- '<i class="fas fa-star checked"></i>'.repeat(4) %>
                        </label>
                    </div>
                    <div>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3"/>
                        <label for="first-rate3" title="3 stars - Avarage">
                            <%- '<i class="fas fa-star checked"></i>'.repeat(3) %>
                        </label>
                    </div>
                    <div>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2"/>
                        <label for="first-rate2" title="2 stars - Bad">
                            <%- '<i class="fas fa-star checked"></i>'.repeat(2) %>
                        </label>
                    </div>
                    <div>
                        <input type="radio" id="first-rate1" name="review[rating]" value="1"/>
                        <label for="first-rate1" title="1 stars - Terrible">
                            <%- '<i class="fas fa-star checked"></i>'.repeat(1) %>
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sumbit</button>    
                </div>
            </form>
            <a href="/movies">BACK</a>
        </div>
    </div>

<% include ../partials/footer %>